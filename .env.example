# Module 7.2: Application Performance Monitoring - Environment Variables
# Copy this file to .env and fill in your actual values

# ===================================
# Datadog APM Configuration
# ===================================
# Get your API key from: https://app.datadoghq.com/organization-settings/api-keys
DD_API_KEY=your_datadog_api_key_here
DD_SITE=datadoghq.com
DD_SERVICE=compliance-copilot-rag
DD_ENV=production
DD_VERSION=1.0.0

# APM Profiling Settings
DD_PROFILING_ENABLED=true
DD_PROFILING_CAPTURE_PCT=1
DD_TRACE_SAMPLE_RATE=0.1
DD_TRACE_ANALYTICS_ENABLED=true

# Performance Overhead Limits
DD_PROFILING_MAX_TIME_USAGE_PCT=5.0
DD_PROFILING_MEMORY_ENABLED=true
DD_PROFILING_CPU_ENABLED=true

# Database Query Profiling
DD_TRACE_DATABASE_ENABLED=true
DD_TRACE_ANALYTICS_SAMPLE_RATE=0.5

# ===================================
# OpenTelemetry Configuration (M7.1 prerequisite)
# ===================================
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=compliance-copilot-rag
OTEL_TRACE_ENABLED=true

# ===================================
# Vector Database (Pinecone example)
# ===================================
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=compliance-docs

# ===================================
# Application Settings
# ===================================
LOG_LEVEL=INFO
MAX_QUERY_LENGTH=1000
MAX_RESULTS=10
TIMEOUT_SECONDS=30

# ===================================
# Cost Control Notes
# ===================================
# Datadog Pricing (after 14-day free trial):
# - Base: $15/month per host
# - Spans: $5 per 1M spans
# - Profiling: $31 per profiled host
#
# Production-safe defaults:
# - DD_PROFILING_CAPTURE_PCT=1 (1% profiling, <1% overhead)
# - DD_TRACE_SAMPLE_RATE=0.1 (10% sampling, cost control)
# - DD_PROFILING_MAX_TIME_USAGE_PCT=5.0 (max 5% CPU overhead)
