{
  "_comment": "Example configuration keys used by config.py",
  "openai": {
    "api_key_env": "OPENAI_API_KEY",
    "default_model": "gpt-4o-mini"
  },
  "anthropic": {
    "api_key_env": "ANTHROPIC_API_KEY"
  },
  "redis": {
    "host_env": "REDIS_HOST",
    "port_env": "REDIS_PORT",
    "db_env": "REDIS_DB",
    "password_env": "REDIS_PASSWORD",
    "session_ttl_env": "REDIS_SESSION_TTL",
    "defaults": {
      "host": "localhost",
      "port": 6379,
      "db": 0,
      "session_ttl": 604800
    }
  },
  "memory": {
    "short_term_buffer_size_env": "SHORT_TERM_BUFFER_SIZE",
    "max_context_tokens_env": "MAX_CONTEXT_TOKENS",
    "defaults": {
      "short_term_buffer_size": 5,
      "max_context_tokens": 8000
    }
  },
  "spacy": {
    "model_env": "SPACY_MODEL",
    "default": "en_core_web_sm"
  }
}
